{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "Template for TypeScript projects.",
  "main": "index.js",
  "author": "marciorasf@gmail.com",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "TS_NODE_BASEURL=./dist/src node -r tsconfig-paths/register dist/src/index.js",
    "dev": "nodemon",
    "test": "jest",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc ",
    "fix": "gts fix",
    "posttest": "yarn run lint"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "pre-commit": [
    "fix",
    "test"
  ],
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^14.11.2",
    "gts": "^3.1.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "pre-commit": "^1.2.2",
    "ts-jest": "^28.0.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "<4.5.0"
  }
}
